<script>
    $(document).on("click", ".edit-product", function () {
        let product_id = $(this).data('id');
        let product_name = $(this).data('name');
        let product_number = $(this).data('number');
        let product_price = $(this).data('price');

        $('#product_id').val(product_id);
        $('#product_name').val(product_name);
        $('#product_number').val(product_number);
        $('#product_price').val(product_price);
    });

    $(document).on("click", ".add-cart", function () {
        let cart_product_id = $(this).data('cart-id');
        let cart_product_name = $(this).data('cart-name');
        let cart_product_number = $(this).data('cart-number');
        let cart_product_price = $(this).data('cart-price');

        $('#cart_product_id').val(cart_product_id);
        $('#cart_product_name').val(cart_product_name);
        $('#cart_product_number').val(cart_product_number);
        $('#cart_product_price').val(cart_product_price);
    });

    function CheckAll(source) {
        var checkboxes = document.querySelectorAll('input[type="checkbox"]');
        for (var i = 0; i < checkboxes.length; i++) {
            if (checkboxes[i] != source)
            {
                checkboxes[i].checked = source.checked;
            }
        }
        var checkedValue = []; 
        checkboxes.forEach(item => {
            checkedValue.push(item.value);
        });
        !source.checked ? document.getElementById('deleteArray').value = '' : document.getElementById('deleteArray').value = checkedValue.slice(1);
    }
    function checkDelete() {
        var checkedValue = []; 
        const a = document.querySelectorAll('.check-delete:checked')
        a.forEach(item => {
            checkedValue.push(item.value);
        });
        document.getElementById('deleteArray').value = checkedValue
    }
